<div class="flex flex-col flex-nowrap justify-center items-center w-full mt-10"> 
<div class="container w-100 mt-10 m-5 card-style" id="login-form">
    <form class="flex flex-col login-form">
        <div class="container light-color flex justify-start items-center dark-background h-10">
        <h6 class="ml-4 font-bold">Login</h6>
        </div>
        <div class="flex flex-col m-4">
            <div class="form-group flex flex-col m-3">
                <label for='username-login'>Username</label>
                <input type="text" class="form-control pl-4" id="username-login"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <label for="password-login">Password</label>
                <input type="password" class="form-control pl-4" id="password-login"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <button class="dark-background font-bold light-color">Login!</button>
                <a href="#" id="swap-to-signup" class="mt-3 font-bold">Don't have an account? Sign up here!</a>
            </div>
        </div>
    </form>
</div> 


<div class="container w-100 mt-10 m-5 card-style hidden" id="signup-form">
    <form class="flex flex-col signup-form">
        <div class="container flex justify-start items-center dark-background h-10">
        <h6 class="ml-4 font-bold light-color">Sign Up</h6>
        </div>
        <div class="flex flex-col m-4">
            <div class="form-group flex flex-col m-3">
                <label for='username-signup'>Create a username</label>
                <input type="text" class="form-control pl-4" id="username-signup"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <label for="password-signup">Create a strong password</label>
                <input type="password" class="form-control pl-4" id="password-signup"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <button class="dark-background font-bold light-color">Sign up!</button>
                <a href="#" id="swap-to-login" class="mt-3 font-bold">Already have an account? Login here.</a>
            </div>
        </div>
    </form>
</div>
</div>

