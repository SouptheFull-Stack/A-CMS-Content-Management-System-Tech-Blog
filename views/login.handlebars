<div class="container w-100 mt-10 m-5 card-style">
    <form class="flex flex-col" id="login-form">
        <div class="container flex justify-start items-center dark-header h-10">
        <h6 class="ml-4 font-bold">Login</h6>
        </div>
        <div class="flex flex-col m-4">
            <div class="form-group flex flex-col m-3">
                <label for='username-login'>Username</label>
                <input type='username' class='form-control' id="username-login"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <label for="password-login">Password</label>
                <input type="password" class="form-control" id="password-login"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <button class="dark-header font-bold">Login!</button>
                <a href="#" id="swap-to-signup" class="mt-3">Sign up here!</a>
            </div>
        </div>
    </form>
</div>

<div class="container w-100 mt-10 m-5 card-style hidden">
    <form class="flex flex-col" id="signup-form">
        <div class="container flex justify-start items-center dark-header h-10">
        <h6 class="ml-4 font-bold">Sign Up</h6>
        </div>
        <div class="flex flex-col m-4">
            <div class="form-group flex flex-col m-3">
                <label for='username-signup'>Create a username</label>
                <input type='username' class='form-control' id="username-signup"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <label for="email-signup">Enter a valid email address</label>
                <input type="email" class="form-control" id="email-signup"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <label for="password-signup">Create a strong password</label>
                <input type="signup" class="form-control" id="password-signup"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <button class="dark-header font-bold">Sign up!</button>
                <a href="#" id="swap-to-login" class="mt-3">Already have an account? Login here.</a>
            </div>
    </form>
</div>



