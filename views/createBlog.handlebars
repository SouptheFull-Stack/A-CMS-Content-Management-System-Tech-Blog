<div class="flex flex-col flex-nowrap justify-center items-center w-full mt-10"> 
<div class="container w-100 mt-10 m-5 card-style" id="blog-form">
    <form class="flex flex-col blog-form">
        <div class="container flex justify-start items-center dark-background h-10">
        <h6 class="ml-4 font-bold light-color">Create New Post</h6>
        </div>
        <div class="flex flex-col m-4">
            <div class="form-group flex flex-col m-3">
                <label for="title-create">Title</label>
                <input type="text" class="form-control pl-4" id="title-create"/>
            </div>
            <div class="form-group flex flex-col m-3">
                <label for="content-create">Content</label>
                <textarea class="pl-2" rows="3" id="content-create"></textarea>
            </div>
            <div class="form-group flex flex-col m-3">
                <button class="dark-background font-bold light-color">Create Blog!</button>
            </div>
        </div>
    </form>
</div>
</div>

<script src="./js/createBlog.js"></script>

