<div class="flex flex-col m-4">
    <div class="form-group flex flex-col m-3">
        <label for='{{inputId1}}'>{{labelText1}}</label>
        <input type="{{inputType1}}" class="pl-4" id="{{inputId1}}"/>
    </div>
    {{#if createBlog}}
    <div class="form-group flex flex-col m-3">
        <label for='{{inputId2}}'>{{labelText2}}</label>
        <input type="{{inputType2}}" class="pl-4 content-input" id="{{inputId2}}"/>
    </div>
    {{else}}
    <div class="form-group flex flex-col m-3">
        <label for='{{inputId2}}'>{{labelText2}}</label>
        <input type="{{inputType2}}" class="pl-4" id="{{inputId2}}"/>
    </div>
    {{/if}}
    <div class="form-group flex flex-col m-3">
        <button class="dark-background font-bold light-color">{{buttonText}}</button>
        {{#if showLink}}
            <a href="#" id="{{linkId}}" class="mt-3 font-bold">{{linkText}}</a>
        {{/if}}
    </div>
</div>

